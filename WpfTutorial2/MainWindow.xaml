<Window x:Class="WpfTutorial2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTutorial2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="tbStatus" Text="Hello there, click to run" FontSize="17"/>
        <Button x:Name="btnToggleRun" Width="100" Height="100" 
                VerticalAlignment="Center" HorizontalAlignment="Center" Content="Run" 
                FontSize="30" Click="btnToggleRun_Click"/>

    </Grid>
</Window>
